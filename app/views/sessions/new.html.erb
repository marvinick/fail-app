<div class="well">
  <h2>Log in</h2>
    <%= form_tag '/login' do %>
      <div class="control-group">
        <%= label_tag :name %>
        <%= text_field_tag :name %>
      </div>
      <div class="control-group">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
      <hr/>
      <%= submit_tag 'Login', class: "btn btn-success btn-lg" %>
    <% end %>
  </div>
</body>